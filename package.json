{
  "name": "gobot",
  "version": "0.1.1",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/ts-node",
      "**/ts-node/**",
      "**/tsconfig-paths",
      "**/tsconfig-paths/**",
      "**/module-alias",
      "**/module-alias/**",
      "**/typeorm",
      "**/typeorm/**"
    ]
  },
  "scripts": {
    "release": "lerna version --conventional-commits -y",
    "diff": "lerna diff",
    "backend": "yarn workspace @gobot/backend",
    "frontend": "yarn workspace @gobot/frontend",
    "docker:migration:gen": "docker-compose --env-file ./packages/backend/.env.production -f docker-compose.yml -f docker-compose.gen-migration.yml up backend",
    "docker:migration:run": "docker-compose --env-file ./packages/backend/.env.production -f docker-compose.yml -f docker-compose.run-migration.yml up backend",
    "docker:backup:load": "gzip -dkf ./tmp/backup.sql.gz && docker-compose --env-file ./packages/backend/.env.production -f docker-compose.yml -f docker-compose.prod.yml up -d postgres && echo Database is starting up... && sleep 10 &&  cat ./tmp/backup.sql | docker exec -i gobot_postgres_1 psql -U postgres -d Gobot && yarn docker:stop",
    "docker:logs:dev": "docker-compose -p gobot_dev logs -f",
    "docker:logs:prod": "docker-compose -p gobot_prod logs -f",
    "docker:build:dev": "docker-compose -p gobot_dev --env-file ./packages/backend/.env.development -f docker-compose.yml -f docker-compose.dev.yml build",
    "docker:build:prod": "docker-compose -p gobot_prod --env-file ./packages/backend/.env.production -f docker-compose.yml -f docker-compose.prod.yml build",
    "docker:dev": "docker-compose -p gobot_dev --env-file ./packages/backend/.env.development -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker:start": "docker-compose -p gobot_prod --env-file ./packages/backend/.env.production -f docker-compose.yml -f docker-compose.prod.yml up --build",
    "docker:stop": "docker-compose down",
    "docker:stop:dev": "docker-compose -p gobot_dev --env-file ./packages/backend/.env.development down",
    "docker:stop:prod": "docker-compose -p gobot_prod --env-file ./packages/backend/.env.production down"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  }
}
